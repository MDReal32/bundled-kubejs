{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",

    /* Bundler */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Project */
    "baseUrl": "./",
    "paths": {
      "@kubejs/core": ["./kubejs/main.ts"],
      "@kubejs/plugin": ["./kubejs/plugin.ts"],
      "@kubejs/plugin/vite": ["./kubejs/plugin/vite.ts"]
    }
  }
}
