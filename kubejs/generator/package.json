{
  "name": "@kubejs/generator",
  "version": "1.1.0",
  "description": "A generator for KubeJS plugin",
  "repository": {
    "type": "git",
    "url": "https://github.com/MDReal32/bundled-kubejs.git",
    "directory": "kubejs/generator"
  },
  "type": "module",
  "main": "build/main.js",
  "types": "build/main.d.ts",
  "bin": {
    "kubejs": "bin/generator.js"
  },
  "files": [
    "build",
    "bin",
    "template"
  ],
  "scripts": {
    "build": "vite build",
    "prepare": "yarn workspace @kubejs/core build",
    "prepublishOnly": "yarn build",
    "publish:me": "yarn npm publish --access public",
    "start:dev": "nodemon build/dev.js -- generate -n sample-project -v 1.0.0 -m 1.18.2 -t forge -p sample-project",
    "watch": "vite build --watch"
  },
  "dependencies": {
    "ejs": "3.1.10",
    "inquirer": "^9.2.23",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.2",
    "simple-git": "^3.24.0",
    "yaml": "^2.4.5",
    "yargs": "17.7.2",
    "yarn": "^1.22.22",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/ejs": "^3.1.5",
    "@types/inquirer": "^9.0.7",
    "@types/lodash": "^4.17.5",
    "@types/node": "^20.14.2",
    "@types/yargs": "17.0.32",
    "nodemon": "^3.1.3",
    "typescript": "5.4.5",
    "vite": "5.2.13"
  },
  "packageManager": "yarn@4.0.2"
}
